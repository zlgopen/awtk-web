<window anim_hint="htranslate">
  <row  x="10" y="30" w="100%" h="150" children_layout="default(row=1,col=3)">
    <text_selector style="image" options="2000-2050" selected_index="0" loop_options="true" animating_time="200" /> 
    <text_selector options="1-12-%02d" loop_options="true" selected_index="0" animation="selected_index(from=12, to=0, repeat_times=0, easing=linear, duration=12000)" />
    <text_selector options="1-31-%02d" loop_options="true" selected_index="0" animation="selected_index(from=0, to=31, repeat_times=0, easing=linear, duration=30000)" />
  </row>
  <button name="close" x="center" y="middle" w="50%" h="30" text="close"/>
  <row  x="10" y="bottom:30" w="100%" h="90" children_layout="default(row=1,col=3)">
    <text_selector style="dark" options="2000-2050" visible_nr="3" text="2018"/>
    <text_selector options="0-60-%02d-5" visible_nr="3" text="05"/>
    <text_selector options="red;green;blue;gold;orange" visible_nr="3" text="red"/>
  </row>
</window>
